.agreement-container {
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

.agreement-header {
  background: white;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #e9ecef;
  text-align: center;
}

.agreement-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.update-time {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.agreement-content {
  flex: 1;
  padding: 30rpx;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.content-section {
  margin-bottom: 40rpx;
}

.content-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.section-content {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  text-align: justify;
  white-space: pre-line;
}

.agreement-footer {
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
}

.agree-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.agree-btn::after {
  border: none;
}