.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

.login-tips {
  text-align: center;
  margin-bottom: 60rpx;
}

.login-tips text {
  font-size: 32rpx;
  color: white;
}

.agreement-section {
  display: flex;
  justify-content: center;
  align-items: center;
}

.agreement-checkbox {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #007AFF;
  border-color: #007AFF;
}

.checkmark {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.agreement-text {
  flex: 1;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

.agreement-link {
  color: #007AFF;
  text-decoration: underline;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: white;
  color: #667eea;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.login-btn::after {
  border: none;
}

.login-btn.disabled {
  background: #CCCCCC !important;
  color: #999999 !important;
  opacity: 0.6;
}

.agreement-tip {
  text-align: center;
  margin-top: 20rpx;
}

.agreement-tip text {
  font-size: 24rpx;
  color: #FF6B6B;
}

.user-info {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  border: 4rpx solid white;
}

.nickname {
  display: block;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.continue-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  background: white;
  color: #667eea;
  border: none;
}

.continue-btn::after {
  border: none;
}

.login-footer {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 600rpx;
}

.login-footer .agreement-section {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.login-footer .agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  white-space: nowrap;
  flex: 1;
}

.login-footer .agreement-link {
  color: #007AFF;
  text-decoration: underline;
}

.login-footer .checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 2rpx;
  transition: all 0.3s ease;
}

.login-footer .checkbox.checked {
  background: #007AFF;
  border-color: #007AFF;
}

.login-footer .checkmark {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}