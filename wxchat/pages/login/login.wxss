.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-text {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

.login-tips {
  text-align: center;
  margin-bottom: 60rpx;
}

.login-tips text {
  font-size: 32rpx;
  color: white;
}

.login-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: white;
  color: #667eea;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.login-btn::after {
  border: none;
}

.user-info {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  border: 4rpx solid white;
}

.nickname {
  display: block;
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.continue-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  background: white;
  color: #667eea;
  border: none;
}

.continue-btn::after {
  border: none;
}

.login-footer {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}