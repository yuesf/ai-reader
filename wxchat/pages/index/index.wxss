/**index.wxss**/
page {
  background-color: #f5f5f5;
}

/* index.wxss */
.user-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.logout-btn {
  background: #dc3545;
  color: white;
  border: none;
  font-size: 24rpx;
}

.logout-btn::after {
  border: none;
}

.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 搜索区域样式 */
.search-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  width: 98%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 20rpx 30rpx; /* 增加左右内边距 */
  font-size: 28rpx;
  border: none;
  outline: none;
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 30rpx; /* 增加左右内边距 */
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 0; /* 移除左边距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-btn:active {
  transform: scale(0.98);
}

/* 报告列表样式 */
.reports-section {
  padding: 20rpx;
}

.thumb-tip {
  padding: 10rpx 20rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.report-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.report-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  z-index: 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.report-item:active::before {
  opacity: 1;
}

.report-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.report-main {
  display: flex;
  align-items: flex-start;
  position: relative;
  z-index: 1;
}

/* 缩略图样式 */
.report-thumbnail {
  margin-right: 30rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.thumbnail-img {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 报告信息样式 */
.report-info {
  flex: 1;
  min-width: 0;
  position: relative;
  z-index: 1;
}

.report-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.report-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.report-source {
  background: #e3f2fd;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.report-category {
  background: #f3e5f5;
  color: #7b1fa2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.report-pages {
  background: #e8f5e8;
  color: #388e3c;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签样式 */
.report-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 发布时间样式 */
.report-date {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #999;
  font-size: 24rpx;
  margin-top: 12rpx;
  position: relative;
  z-index: 1;
}

.date-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.date-text {
  color: #666;
}

/* 无搜索结果样式 */
.no-results {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
  font-size: 26rpx;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.no-more {
  color: #ccc;
}

.pull-up {
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .report-item {
    flex-direction: column;
  }
  
  .report-thumbnail {
    margin-right: 0;
    margin-bottom: 20rpx;
    align-self: center;
  }
  
  .report-date {
    margin-top: 20rpx;
    justify-content: flex-end;
  }
}