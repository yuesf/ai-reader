/**index.wxss - 博客首页样式**/
page {
  background-color: #f8f9fa;
}

.blog-container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 顶部品牌区域 */
.blog-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.blog-header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.brand-section {
  position: relative;
  z-index: 1;
}

.blog-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.blog-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
}

/* 快速导航区域 */
.nav-section {
  background: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-nav {
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.nav-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.nav-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.nav-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-btn {
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.all-reports-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 搜索区域 */
.search-section {
  background: white;
  padding: 0 20rpx;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-section.show {
  max-height: 200rpx;
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 8rpx;
}

.search-input {
  flex: 1;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.search-confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  margin-right: 8rpx;
}

.search-close-btn {
  background: #dc3545;
  color: white;
  border: none;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 博客内容区域 */
.blog-content {
  padding: 20rpx;
}

/* 区域标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 精选推荐区域 */
.featured-section {
  margin-bottom: 40rpx;
}

.featured-scroll {
  white-space: nowrap;
}

.featured-item {
  display: inline-block;
  width: 320rpx;
  margin-right: 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  vertical-align: top;
}

.featured-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.featured-cover {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.featured-info {
  padding: 24rpx;
}

.featured-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.featured-summary {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.featured-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.featured-category {
  background: #e3f2fd;
  color: #1976d2;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.featured-date {
  font-size: 22rpx;
  color: #999;
}

/* 最新文章区域 */
.latest-section {
  margin-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 文章列表 */
.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.article-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.article-cover {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.cover-img {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.article-content {
  padding: 30rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.article-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.article-category {
  background: #f3e5f5;
  color: #7b1fa2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.article-date {
  font-size: 24rpx;
  color: #999;
}

.article-read {
  font-size: 24rpx;
  color: #999;
}

.article-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.summary-btn {
  background: #f8f9fa;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.summary-btn:active {
  background: #667eea;
  color: white;
}

.report-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.report-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

/* 空状态和无结果 */
.no-results, .empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
  font-size: 26rpx;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.no-more {
  color: #ccc;
}

.pull-up {
  color: #667eea;
  font-weight: 500;
  cursor: pointer;
}

.pull-up:active {
  color: #764ba2;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .featured-item {
    width: 280rpx;
  }
  
  .article-actions {
    flex-direction: column;
  }
  
  .action-btn {
    flex: none;
  }
}