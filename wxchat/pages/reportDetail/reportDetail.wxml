<view class="report-container">
  <view class="report-header">
    <text class="report-title">{{reportTitle}}</text>
    <!-- 新增：将标题单独放在一行 -->
    <view style="height: 20rpx;"></view> <!-- 添加一些间距 -->
    <text class="report-subtitle">{{reportSubtitle}}</text>
    <text class="report-date">{{reportDate}}</text>
  </view>

  <view class="tabs">
    <button wx:if="{{activeTab === 'description'}}" class="tab-button active">简介</button>
    <button wx:else class="tab-button" bindtap="handleTabChange" data-tab="description">简介</button>
    <button wx:if="{{activeTab === 'preview'}}" class="tab-button active">预览</button>
    <button wx:else class="tab-button" bindtap="handleTabChange" data-tab="preview">预览</button>
  </view>

  <view class="content" wx:if="{{activeTab === 'description'}}">
    <!-- 简介内容 -->
    {{reportSummary}}
  </view>
  <view class="content" wx:if="{{activeTab === 'preview'}}">
    <!-- 预览内容 -->
  </view>

  <!-- 下载文档按钮移动到新的容器中 -->
  <view class="download-button-container">
    <button class="download-button" bindtap="downloadDocument" wx:if="{{reportIsFree}}">
      免费下载文档
    </button>
    <button class="download-button" bindtap="downloadDocument" wx:else>
      {{downloadPrice}} | 下载文档
    </button>
  </view>
</view>
